<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/star"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.Game.Rowdy.GameofKnowledge.Tablevels">


    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
<TableRow>
    <TextView
        android:id="@+id/lname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imv"
        android:layout_centerHorizontal="true"
        android:layout_span="3"
        android:text="3X3"
        android:textAlignment="center"
        android:textColor="#aaff85"
        android:textSize="50sp"
        android:textStyle="normal|bold"
        android:typeface="monospace" />
</TableRow>

        <TableRow>

            <Button
                android:id="@+id/left"
                android:layout_width="70dp"
                android:layout_height="210dp"
                android:background="@drawable/lefta" />

            <ImageView
                android:id="@+id/imv"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/three"
                android:clickable="true"
                android:onClick="picpuzz" />

            <Button
                android:id="@+id/right"
                android:layout_width="70dp"
                android:layout_height="210dp"
                android:background="@drawable/righta" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/imv"
                android:layout_marginTop="15dp"
                android:layout_span="3"
                android:autoText="false"
                android:clickable="false"
                android:text="Click and complete \n the picture puzzle "
                android:textAlignment="center"
                android:textColor="#aaff85"
                android:textSize="28dp"
                android:textStyle="normal|bold"
                android:typeface="monospace" />
        </TableRow>

    </TableLayout>

</RelativeLayout>