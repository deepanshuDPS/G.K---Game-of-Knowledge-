<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.Game.Rowdy.GameofKnowledge.Levels1"
    android:background="@drawable/black">
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
        <TableRow android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <Button
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:background="@drawable/fourc"
                android:id="@+id/clevel1"
                android:layout_column="0"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Align Color Vertically\n In Ascending  order \n According to \n First alphabet of \n Colors&apos; name"
                android:textSize="13dp"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:layout_column="1"
                android:textStyle="bold"
                android:textAlignment="center" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:text="LOCKED!"
                android:textColor="#ff0000"
                android:textStyle="bold"
                android:textSize="20dp"
                android:background="@drawable/fourn"
                android:id="@+id/nlevel1"
                android:layout_column="0"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Align The Numbers \n   Vertically  In Ascending \n Order"
                android:textSize="13dp"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:layout_column="1"
                android:textStyle="bold"
                android:textAlignment="center" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:text="LOCKED!"
                android:textColor="#ff0000"
                android:textStyle="bold"
                android:textSize="20dp"
                android:background="@drawable/foura"
                android:id="@+id/alevel1"
                android:layout_column="0"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center"
                android:text=" Align The Alphabets \n  Vertically In Ascending \n Order"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="13dp"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/text1"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#00000000" />

</RelativeLayout>
