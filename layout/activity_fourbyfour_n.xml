<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.Game.Rowdy.GameofKnowledge.FourbyfourN"
    android:background="@drawable/q2">
    <GridLayout
        android:id="@+id/gridLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="4"
        android:layout_marginTop="47dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/Fxf1"
            style="?android:attr/buttonStyleSmall"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:background="#86f770"
            android:minHeight="85dip"
            android:minWidth="85dip"
            android:text="1"
            android:textSize="20dp" />

        <Button
            android:id="@+id/Fxf2"
            style="?android:attr/buttonStyleSmall"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:background="#caa4f9"
            android:minHeight="85dip"
            android:minWidth="85dip"
            android:text="5"
            android:textSize="20dp" />

        <Button
            android:id="@+id/Fxf3"
            style="?android:attr/buttonStyleSmall"
            android:layout_column="2"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:background="#86f770"
            android:minHeight="85dip"
            android:minWidth="85dip"
            android:text="9"
            android:textSize="20dp" />
        <Button
            android:id="@+id/Fxf4"
            style="?android:attr/buttonStyleSmall"
            android:layout_column="3"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:background="#caa4f9"
            android:minHeight="85dip"
            android:minWidth="85dip"
            android:text="13"
            android:textSize="20dp" />

        <Button
            android:id="@+id/Fxf5"
            style="?android:attr/buttonStyleSmall"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:layout_row="1"
            android:background="#caa4f9"
            android:minHeight="85dip"
            android:minWidth="85dip"
            android:text="2"
            android:textSize="20dp" />

        <Button
            android:id="@+id/Fxf6"
            style="?android:attr/buttonStyleSmall"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_row="1"
            android:background="#86f770"
            android:minHeight="85dip"
            android:minWidth="85dip"
            android:text="6"
            android:textSize="20dp" />

        <Button
            android:id="@+id/Fxf7"
            style="?android:attr/buttonStyleSmall"
            android:layout_column="2"
            android:layout_gravity="left|top"
            android:layout_row="1"
            android:background="#caa4f9"
            android:minHeight="85dip"
            android:minWidth="85dip"
            android:text="10"
            android:textSize="20dp" />
        <Button
            android:id="@+id/Fxf8"
            style="?android:attr/buttonStyleSmall"
            android:layout_column="3"
            android:layout_gravity="left|top"
            android:layout_row="1"
            android:background="#86f770"
            android:minHeight="85dip"
            android:minWidth="85dip"
            android:text="14"
            android:textSize="20dp" />
        <Button
            android:id="@+id/Fxf9"
            style="?android:attr/buttonStyleSmall"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:layout_row="2"
            android:background="#86f770"
            android:minHeight="85dip"
            android:minWidth="85dip"
            android:text="3"
            android:textSize="20dp" />

        <Button
            android:id="@+id/Fxf10"
            style="?android:attr/buttonStyleSmall"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_row="2"
            android:background="#caa4f9"
            android:minHeight="85dip"
            android:minWidth="85dip"
            android:text="7"
            android:textSize="20dp" />
        <Button
            android:id="@+id/Fxf11"
            style="?android:attr/buttonStyleSmall"
            android:layout_column="2"
            android:layout_gravity="left|top"
            android:layout_row="2"
            android:background="#86f770"
            android:minHeight="85dip"
            android:minWidth="85dip"
            android:text="11"
            android:textSize="20dp" />

        <Button
            android:id="@+id/Fxf12"
            style="?android:attr/buttonStyleSmall"
            android:layout_column="3"
            android:layout_gravity="left|top"
            android:layout_row="2"
            android:background="#caa4f9"
            android:minHeight="85dip"
            android:minWidth="85dip"
            android:text="15"
            android:textSize="20dp" />
        <Button
            android:id="@+id/Fxf13"
            style="?android:attr/buttonStyleSmall"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="3"
            android:background="#caa4f9"
            android:minHeight="85dip"
            android:minWidth="85dip"
            android:text="4"
            android:textSize="20dp" />
        <Button
            android:id="@+id/Fxf14"
            style="?android:attr/buttonStyleSmall"
            android:layout_column="1"
            android:layout_gravity="center_horizontal"
            android:layout_row="3"
            android:background="#86f770"
            android:minHeight="85dip"
            android:minWidth="85dip"
            android:text="8"
            android:textSize="20dp" />

        <Button
            android:id="@+id/Fxf15"
            style="?android:attr/buttonStyleSmall"
            android:layout_column="2"
            android:layout_gravity="left|top"
            android:layout_row="3"
            android:background="#caa4f9"
            android:minHeight="85dip"
            android:minWidth="85dip"
            android:text="12"
            android:textSize="20dp" />
        <Button
            android:id="@+id/Fxf16"
            style="?android:attr/buttonStyleSmall"
            android:layout_column="3"
            android:layout_gravity="left|top"
            android:layout_row="3"
            android:background="#00000000"
            android:minHeight="85dip"
            android:minWidth="85dip"
            android:textSize="20dp" />
    </GridLayout>
    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_column="0"
        android:textSize="27dp"
        android:background="@drawable/restart"
        android:id="@+id/rea"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/gridLayout1"
        android:onClick="restart" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tableLayout"
        android:background="#d3d3d3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true">
        <TableRow
            android:layout_height="wrap_content"
            android:background="@drawable/timer"
            android:layout_width="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="TIMER : "
                android:textSize="30dp"
                android:id="@+id/textView"
                android:layout_column="0"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:textColor="#b5e1dc" />

            <Chronometer
                android:id="@+id/chronometer"
                android:format="%s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:textSize="30dp"
                android:layout_alignTop="@+id/textView"
                android:layout_alignEnd="@+id/gridLayout1"
                android:layout_marginEnd="34dp"
                android:textColor="#b5e1dc" />
        </TableRow>
    </TableLayout>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/pause"
        android:background="@drawable/pause"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:onClick="pause"/>
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/help"
        android:background="@drawable/help"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:onClick="help"/>
</RelativeLayout>
