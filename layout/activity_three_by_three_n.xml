<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/q1"
    tools:context="com.Game.Rowdy.GameofKnowledge.ThreeByThreeN">
    <GridLayout
        android:id="@+id/gridLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp"
        android:rowCount="3">

        <Button
            android:id="@+id/Txt1"
            style="?android:attr/buttonStyleSmall"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:background="#d3d3d3"
            android:minHeight="117dip"
            android:minWidth="117dip"
            android:text="1"
            android:textSize="25dp"/>

        <Button
            android:id="@+id/Txt2"
            style="?android:attr/buttonStyleSmall"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:background="#6eebf7"
            android:minHeight="117dip"
            android:minWidth="117dip"
            android:text="2"
            android:textSize="25dp"/>

        <Button
            android:id="@+id/Txt3"
            style="?android:attr/buttonStyleSmall"
            android:layout_column="2"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:background="#d3d3d3"
            android:minHeight="117dip"
            android:minWidth="117dip"
            android:text="3"
            android:textSize="25dp"/>


        <Button
            android:id="@+id/Txt4"
            style="?android:attr/buttonStyleSmall"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:layout_row="1"
            android:background="#6eebf7"
            android:minHeight="117dip"
            android:minWidth="117dip"
            android:text="4"
            android:textSize="25dp"/>

        <Button
            android:id="@+id/Txt5"
            style="?android:attr/buttonStyleSmall"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_row="1"
            android:background="#d3d3d3"
            android:minHeight="117dip"
            android:minWidth="117dip"
            android:text="5"
            android:textSize="25dp"/>

        <Button
            android:id="@+id/Txt6"
            style="?android:attr/buttonStyleSmall"
            android:layout_column="2"
            android:layout_gravity="left|top"
            android:layout_row="1"
            android:background="#6eebf7"
            android:minHeight="117dip"
            android:minWidth="117dip"
            android:text="6"
            android:textSize="25dp"/>
        <Button
            android:id="@+id/Txt7"
            style="?android:attr/buttonStyleSmall"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:layout_row="2"
            android:background="#d3d3d3"
            android:minHeight="117dip"
            android:minWidth="117dip"
            android:text="7"
            android:textSize="25dp"/>

        <Button
            android:id="@+id/Txt8"
            style="?android:attr/buttonStyleSmall"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_row="2"
            android:background="#6eebf7"
            android:minHeight="117dip"
            android:minWidth="117dip"
            android:text="8"
            android:textSize="25dp"/>
        <Button
            android:id="@+id/Txt9"
            style="?android:attr/buttonStyleSmall"
            android:layout_column="2"
            android:layout_gravity="left|top"
            android:layout_row="2"
            android:background="#00000000"
            android:minHeight="117dip"
            android:minWidth="117dip"
            android:text=""
            android:textSize="25dp"/>
    </GridLayout>
    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_column="0"
        android:textSize="27dp"
        android:background="@drawable/restart"
        android:id="@+id/restart"
        android:layout_alignTop="@+id/tableLayout"
        android:layout_alignParentStart="true"
        android:onClick="restart" />
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tableLayout"
        android:background="#d3d3d3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true">
        <TableRow
            android:layout_height="wrap_content"
            android:background="@drawable/timer"
            android:layout_width="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="TIMER : "
                android:textSize="30dp"
                android:id="@+id/textView"
                android:layout_column="0"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

            <Chronometer
                android:id="@+id/chronometer"
                android:format="%s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:textSize="30dp"
                android:layout_alignTop="@+id/textView"
                android:layout_alignEnd="@+id/gridLayout1"
                android:layout_marginEnd="34dp" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gridLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        android:text="" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/pause"
        android:background="@drawable/pause"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:onClick="pause"/>
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/help"
        android:background="@drawable/help"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:onClick="help"/>
</RelativeLayout>
