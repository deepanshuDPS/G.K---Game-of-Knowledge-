<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.Game.Rowdy.GameofKnowledge.Picp3"
    android:background="@drawable/tandf">
    <GridLayout
        android:id="@+id/gridLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:layout_marginTop="28dp"
        android:rowCount="3"
        android:layout_below="@+id/pause"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/Pt1"
            style="?android:attr/buttonStyleSmall"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:background="#ffffff"
            android:minHeight="117dip"
            android:minWidth="117dip"
            android:text="1"
            android:textSize="25dp"
            android:layout_width="117dp"
            android:layout_height="117dp"
            android:textColor="#00000000" />

        <Button
            android:id="@+id/Pt2"
            style="?android:attr/buttonStyleSmall"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:background="#ffffff"
            android:minHeight="117dip"
            android:minWidth="117dip"
            android:text="2"
            android:textSize="25dp"
            android:layout_width="117dp"
            android:layout_height="117dp"
            android:textColor="#00000000" />

        <Button
            android:id="@+id/Pt3"
            style="?android:attr/buttonStyleSmall"
            android:layout_column="2"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:background="#ffffff"
            android:minHeight="117dip"
            android:minWidth="117dip"
            android:text="3"
            android:textSize="25dp"
            android:layout_width="117dp"
            android:layout_height="117dp"
            android:textColor="#00000000" />


        <Button
            android:id="@+id/Pt4"
            style="?android:attr/buttonStyleSmall"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:layout_row="1"
            android:background="#ffffff"
            android:minHeight="117dip"
            android:minWidth="117dip"
            android:text="4"
            android:textSize="25dp"
            android:layout_width="117dp"
            android:layout_height="117dp"
            android:textColor="#00000000" />

        <Button
            android:id="@+id/Pt5"
            style="?android:attr/buttonStyleSmall"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_row="1"
            android:background="#ffffff"
            android:minHeight="117dip"
            android:minWidth="117dip"
            android:text="5"
            android:textSize="25dp"
            android:layout_width="117dp"
            android:layout_height="117dp"
            android:textColor="#00000000" />

        <Button
            android:id="@+id/Pt6"
            style="?android:attr/buttonStyleSmall"
            android:layout_column="2"
            android:layout_gravity="left|top"
            android:layout_row="1"
            android:background="#ffffff"
            android:minHeight="117dip"
            android:minWidth="117dip"
            android:text="6"
            android:textSize="25dp"
            android:layout_width="117dp"
            android:layout_height="117dp"
            android:textColor="#00000000" />
        <Button
            android:id="@+id/Pt7"
            style="?android:attr/buttonStyleSmall"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:layout_row="2"
            android:background="#ffffff"
            android:minHeight="117dip"
            android:minWidth="117dip"
            android:text="7"
            android:textSize="25dp"
            android:layout_width="117dp"
            android:layout_height="117dp"
            android:textColor="#00000000" />

        <Button
            android:id="@+id/Pt8"
            style="?android:attr/buttonStyleSmall"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_row="2"
            android:background="#ffffff"
            android:minHeight="117dip"
            android:minWidth="117dip"
            android:text="8"
            android:textSize="25dp"
            android:layout_width="117dp"
            android:layout_height="117dp"
            android:textColor="#00000000" />
        <Button
            android:id="@+id/Pt9"
            style="?android:attr/buttonStyleSmall"
            android:layout_column="2"
            android:layout_gravity="left|top"
            android:layout_row="2"
            android:background="#00000000"
            android:minHeight="117dip"
            android:minWidth="117dip"
            android:text=""
            android:textSize="25dp"
            android:layout_width="117dp"
            android:layout_height="117dp"
            android:textColor="#00000000" />
    </GridLayout>
    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_column="0"
        android:textSize="27dp"
        android:background="@drawable/restart1"
        android:id="@+id/restart"
        android:onClick="restart"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tableLayout"
        android:background="#d3d3d3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true">
        <TableRow
            android:layout_height="wrap_content"
            android:background="@drawable/timer"
            android:layout_width="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="STEPS : "
                android:textSize="30dp"
                android:id="@+id/textView"
                android:layout_column="0"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/steps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:text="0"
                android:textColor="#ffffff"
                android:textSize="30dp"
                android:layout_alignTop="@+id/textView"
                android:layout_alignEnd="@+id/gridLayout1"
                android:layout_marginEnd="34dp" />
        </TableRow>
    </TableLayout>
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/pause"
        android:background="@drawable/imageview"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:onClick="pause"/>

</RelativeLayout>
