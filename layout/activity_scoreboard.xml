<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.Game.Rowdy.GameofKnowledge.Scoreboard"
    android:background="@drawable/score"
    android:onClick="shareit">

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/horizontalScrollView"
        android:fillViewport="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/horizontalScrollView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="81dp"
        android:textColor="#00ff00"
        android:textStyle="italic"
        android:id="@+id/tableLayout2">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Levels "
                android:layout_column="0"
                android:textColor="#00ff00"
                android:textStyle="italic"
                android:textSize="22dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" COLORS "
                android:layout_column="1"
                android:textColor="#00ff00"
                android:textStyle="italic"
                android:textSize="22dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" NUMBERS "
                android:layout_column="2"
                android:textColor="#00ff00"
                android:textStyle="italic"
                android:textSize="22dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" ALPHABETS "
                android:layout_column="3"
                android:textColor="#00ff00"
                android:textStyle="italic"
                android:textSize="22dp"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3X3 "
                android:layout_column="0"
                android:textColor="#00ff00"
                android:textStyle="italic"
                android:textSize="22dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "
                android:layout_column="1"
                android:textColor="#00ff00"
                android:textStyle="italic"
                android:textSize="22dp"
                android:textAlignment="center"
                android:id="@+id/c3" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "
                android:layout_column="2"
                android:textSize="22dp"
                android:textColor="#00ff00"
                android:textStyle="italic"
                android:textAlignment="center"
                android:id="@+id/n3" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "
                android:layout_column="3"
                android:textSize="22dp"
                android:textColor="#00ff00"
                android:textStyle="italic"
                android:textAlignment="center"
                android:id="@+id/a3" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4X4 "
                android:layout_column="0"
                android:textColor="#00ff00"
                android:textStyle="italic"
                android:textSize="22dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "
                android:layout_column="1"
                android:textSize="22dp"
                android:textColor="#00ff00"
                android:textStyle="italic"
                android:textAlignment="center"
                android:id="@+id/c4" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "
                android:layout_column="2"
                android:textSize="22dp"
                android:textColor="#00ff00"
                android:textStyle="italic"
                android:textAlignment="center"
                android:id="@+id/n4" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "
                android:layout_column="3"
                android:textSize="22dp"
                android:textColor="#00ff00"
                android:textStyle="italic"
                android:textAlignment="center"
                android:id="@+id/a4" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5X5 "
                android:layout_column="0"
                android:textColor="#00ff00"
                android:textStyle="italic"
                android:textSize="22dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "
                android:layout_column="1"
                android:textSize="22dp"
                android:textColor="#00ff00"
                android:textStyle="italic"
                android:textAlignment="center"
                android:id="@+id/c5" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "
                android:layout_column="2"
                android:textSize="22dp"
                android:textColor="#00ff00"
                android:textStyle="italic"
                android:textAlignment="center"
                android:id="@+id/n5" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "
                android:layout_column="3"
                android:textSize="22dp"
                android:textColor="#00ff00"
                android:textStyle="italic"
                android:textAlignment="center"
                android:id="@+id/a5" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" OTHERS "
            android:layout_column="3"
            android:textColor="#00ff00"
            android:textStyle="italic"
            android:textSize="22dp"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6X6 "
                android:layout_column="0"
                android:textColor="#00ff00"
                android:textStyle="italic"
                android:textSize="22dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "
                android:layout_column="1"
                android:textSize="22dp"
                android:textColor="#00ff00"
                android:textStyle="italic"
                android:textAlignment="center"
                android:id="@+id/c6" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "
                android:layout_column="2"
                android:textSize="22dp"
                android:textColor="#00ff00"
                android:textStyle="italic"
                android:textAlignment="center"
                android:id="@+id/n6" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "
                android:layout_column="3"
                android:textSize="22dp"
                android:textColor="#00ff00"
                android:textStyle="italic"
                android:textAlignment="center"
                android:id="@+id/a6" />
        </TableRow>
    </TableLayout>
    </HorizontalScrollView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="SCOREBOARD"
        android:id="@+id/T"
        android:textColor="#00ff00"
        android:textStyle="italic"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="TOTAL MARKS IN QUESTIONS"
        android:id="@+id/textView4"
        android:textColor="#00ff00"
        android:textStyle="italic"
        android:typeface="serif"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_below="@+id/horizontalScrollView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="107dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="000"
        android:textSize="20dp"
        android:textColor="#00ff00"
        android:textStyle="italic"
        android:id="@+id/marks"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:textAlignment="center" />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/share"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/horizontalScrollView"
        android:background="@drawable/shareicon"
        android:onClick="shareit" />

</RelativeLayout>

